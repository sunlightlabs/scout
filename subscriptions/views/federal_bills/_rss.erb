<% bill = item.data %>
<title><%= bill['short_title'].present? ? bill['short_title'] : bill['official_title'] %></title>
<% if item.data['search']['highlight'] and (highlight = bill_highlight item, item.interest_in) %>
    <description><![CDATA[
      <%= highlight %>
    ]]></description>
<% elsif bill['summary'].present? %>
  <description><![CDATA[
    <%= truncate bill['summary'], 500 %>
    ]]></description>
<% else %>
  <description>
    No excerpt or summary available.
  </description>
<% end %>