<div class="display">

  <% if tag.description.present? %>
    <%= light_format tag.description %>
  <% end %>

  <% if user == current_user %>
    <% if tag.description.present? %>
      <a href="#" class="description edit">
        edit description
      </a>
    <% else %>
      <a href="#" class="description new">
        add description
      </a>
    <% end %>
  <% end %>
</div>

<% if user == current_user %>
  <div class="edit">
    <textarea class="description" 
      placeholder="Describe this collection of subscriptions. (optional)"
      ><%= h tag.description %></textarea>
    <button class="smallButton description">
      Update
    </button>
    <a class="description cancel" href="#">cancel</a>
  </div>
<% end %> 